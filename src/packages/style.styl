apply(mixins, args...) {
  for arg in args {
    mixins(arg)
  }
}
drawerKeyframes($location) {
  @keyframes {$location}-drawer-in {
    0% {
      if ($location == left) {
        transform translate(-100%, 0)
      }
      if ($location == right) {
        transform translate(100%, 0)
      }
      if ($location == top) {
        transform translate(0, -100%)
      }
      if ($location == bottom) {
        transform translate(0, 100%)
      }
    }
    100% {
      transform translate(0, 0)
    }
  }
  @keyframes {$location}-drawer-out {
    0% {
      transform translate(0, 0)
    }
    100% {
      if ($location == left) {
        transform translate(-100%, 0)
      }
      if ($location == right) {
        transform translate(100%, 0)
      }
      if ($location == top) {
        transform translate(0, -100%)
      }
      if ($location == bottom) {
        transform translate(0, 100%)
      }
    }
  }
}
closeBtnKeyframes($location){
  @keyframes {$location}-close-btn {
    0% {
      transform rotate(0) translate(0,0)
    }
    100%{
      if($location == top) {
        transform rotate(-45deg) translate(-6px, 5px)
      }
      if($location == bottom) {
        transform rotate(45deg) translate(-6px, -6px)
      }
    }
  }
}
drawerAnimationIn($location) {
  .ch-drawer--open {
    .ch-drawer--{$location} {
      if ($location == left) {
        animation left-drawer-in 300ms cubic-bezier(0, 1.03, .91, .97)
      }
      if ($location == right) {
        animation right-drawer-in 300ms cubic-bezier(0, 1.03, .91, .97)
      }
      if ($location == bottom) {
        animation bottom-drawer-in 300ms cubic-bezier(0, 1.03, .91, .97)
      }
      if ($location == top) {
        animation top-drawer-in 300ms cubic-bezier(0, 1.03, .91, .97)
      }
    }
  }
}
drawerAnimationOut($location) {
  .ch-drawer--{$location} {
    if ($location == left) {
      animation left-drawer-out 300ms cubic-bezier(0, 1.03, .91, .97)
    }
    if ($location == right) {
      animation right-drawer-out 300ms cubic-bezier(0, 1.03, .91, .97)
    }
    if ($location == bottom) {
      animation bottom-drawer-out 300ms cubic-bezier(0, 1.03, .91, .97)
    }
    if ($location == top) {
      animation top-drawer-out 300ms cubic-bezier(0, 1.03, .91, .97)
    }
  }
}
apply(closeBtnKeyframes,top, bottom)
apply(drawerKeyframes, left, right, bottom, top)
apply(drawerAnimationIn, left, right, bottom, top)
apply(drawerAnimationOut, left, right, bottom, top)
@keyframes drawer-fade {
  0% {
    opacity 0
  }
  100% {
    opacity 1
  }
}
.drawer--blur {
  filter blur(2px)
}
.ch-drawer {
  position absolute
  overflow hidden
  display flex
  flex-direction column
  background-color #FFF
  &__mask {
    position fixed
    top 0
    right 0
    left 0
    bottom 0
    backgrouind-color transparent
    &--default {
      background-color #000
      opacity .3
    }
  }
  &--left, &--right {
    height 100%
  }
  &--left {
    left 0
    box-shadow 6px 0 10px 0 rgba(0, 0, 0, .1)
  }
  &--right {
    right 0
    box-shadow -6px 0 10px 0 rgba(0, 0, 0, .1)
  }
  &--top, &--bottom {
    width 100%
  }
  &--top {
    top 0
    box-shadow 0 6px 10px 0 rgba(0, 0, 0, .1)
  }
  &--bottom {
    bottom 0
    box-shadow 0 -6px 10px 0 rgba(0, 0, 0, .1)
  }
  &__wrapper {
    position fixed
    top 0
    right 0
    left 0
    bottom 0
  }
  &__container {
    position relative
    height 100%
    &--blur {
      filter blur(2px)
    }
  }
  &__header {
    padding 10px 5px 5px
    display flex
    & :first-child {
      flex 1
    }
  }
  &__close-btn {
    position relative
    margin 0 1em 
    height 18px
    width 18px
    cursor pointer
    &:before, &:after {
      position absolute
      content ''
      border 1px solid #666
      border-radius 1px
      height 0
      width 16px
    }
    &:before {
      top 0
    }
    &:after {
      bottom 0
    }
  }
  &--open &__close-btn {
    &:before {
      animation top-close-btn 500ms cubic-bezier(.88,-0.06,.2,1.27) forwards
    }
    &:after {
      animation bottom-close-btn 500ms cubic-bezier(.88,-0.06,.2,1.27) forwards
    }
  }
  &__content {
    flex 1
    padding 5px
    overflow auto
  }
  &__footer {
    padding 20px 15px
    display flex
    justify-content flex-end
  }
  &-enter-active {
    animation drawer-fade 200ms cubic-bezier(0, 0, .2, 1)
  }
  &-leave-active {
    animation drawer-fade 200ms cubic-bezier(0, 0, .2, 1) reverse
  }
}